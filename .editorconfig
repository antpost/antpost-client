# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_size = 4
indent_style = space

[*.html]
tab_width = 4
indent_style = tab

[{*.json,*.yml,*rc}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
